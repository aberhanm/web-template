$menuWidth = 200px;
$menuColWidth = 100px;

html, body, #app
  height: 100%;
#app
  display: flex;
  background: $colorBGWhite;
  font-size: 14px;
  .content-box
    width: 'calc(100% - %s)' % $menuWidth;
  &.collapse-app
    .content-box
      width: 'calc(100% - %s)' % $menuColWidth;
// 菜单部分 start
.menu-box
  display: flex;
  flex-direction: column;
  background-color: $colorBGBlack;
.menu-header
  text-align: center;
  padding: 10px 0;
.menu-footer-pop
  &[x-placement^=right]
    margin-left: 35px;
    background-color: $colorBGBlack;
    border: none;
.menu-footer-pop-content
  li
    list-style: none;
    color: #fff;
    cursor pointer;
    height: 30px;
    line-height: 30px;
    &:hover
      color: $colorBlue;
.menu-footer
  height: 150px;
  width: 100%;
  color: #fff;
  flexCenter();
  .name-box
    margin-top: 10px;
    font-size: 14px;
    max-width: 100%;
    white-space: normal;
    word-break: break-all;
    text-align: center;
  i
    display: block;
    color: #fff;
    font-size: 24px;
    border: 1px solid #fff;
    height: 34px;
    width: 34px;
    line-height: 34px;
    text-align: center;
    border-radius: 50px;
    cursor: pointer;
    &:hover
      color: $colorBlue;
      border-color: $colorBlue;
.{$name}-menu
  width: $menuWidth;
  flex: 1;
  background-color: transparent;
  color: #fff;
  border-right: none;
  .is-active
    .el-submenu__title
      color: $colorBlue!important;
  i
    color: #fff;
  &.el-menu--collapse
    width: $menuColWidth;
    .el-submenu__title, >.el-menu-item
      flexCenter();
      line-height: 2;
      text-align: center;
      padding: 0!important;
      i
        display: block;
        margin: 0 auto!important;
// 菜单部分 end
// 内容部分 start
.content-box
  flex: 1;
  display: flex;
  flex-direction: column;
  .main-route
    min-width: 1000px;
    height: 100%;
.{$name}-content
    width: 100%;
    flex: 1;
    overflow: auto;
// 内容部分 end
