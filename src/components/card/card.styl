@import '~@/style/var.styl'
@import '~@/style/mixin.styl'

$cname = $name + '-card'

.{$cname}

.{$cname}
  box-shadow: 0 2px 12px 0 rgba(0,0,0,.1)
  border: 1px solid $colorBorder1
  background-color: $colorWhite
  color: $colorFont
  transition: .3s
  border-radius: 4px
  overflow: hidden
  width: 100%
  &.{$cname}-collapsable
    .{$cname}-content
      transition: 0.3s all ease;
    .{$cname}-collapse_icon
      transition: 0.3s all ease;
  &.{$cname}-collapsable_close
    .{$cname}-content
      height: 0
      padding-top: 0px;
      padding-bottom: 0px;
    .{$cname}-collapse_icon
      transform: rotate(-90deg)
.{$cname}-header
  padding: 8px 10px
  border-bottom: 1px solid $colorBorder1
  box-sizing: border-box
  position: relative
  font-weight: bold
  font-size: 16px;
  .{$cname}-collapse_icon
    position: absolute
    right: 10px
    top: 8px
    cursor pointer
    font-size: 16px
.{$cname}-content
  padding: 10px
